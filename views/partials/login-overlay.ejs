<!-- login screen overlay -->
<section id="login-screen-overlay-background">
  <section id="login-screen-overlay">
    <a
      href="javascript:void(0)"
      id="close-btn-login"
      class="close-btn close-btn__left-panel"
      >&times;</a
    >
    <h1>Login</h1>
    <h2>Enter credentials:</h2>
    <form id="login-form">
      <label for="email">E-mail</label>
      <input type="email" name="email" placeholder="Enter e-mail..." required autofocus />
      <label for="password">Password</label>
      <input type="password" name="password" placeholder="Enter password..." required/>
      <input type="submit" value="Submit" />
    </form>
    <p id="response-message"></p>
    <p>Don't have an account yet? <a href="./register.html">Register now</a>.</p>
  </section>
</section>
